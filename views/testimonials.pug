extends ./layout/index

block content 
    main.container.mt-5 
        h1.text-center.mt-5 #{ page }
        blockquote.text-center Read about our costumers and their experiences
        .row.testimonials 
            each testimonial in testimonials 
                .col-md-6.col-lg-4.mb-4 
                    .card 
                        .card-body 
                            blockquote.blockquote 
                            p.mb-0 
                                | #{ testimonial.message }
                            footer.blockquote-footer 
                                | #{ testimonial.name }
        .row 
            .col-md-12
                h2.d-block.w-100.text-center Add a testimonial
                if(errors)
                    each error in errors 
                        .alert.col.alert-danger.text-center=error.message
            .row.justify-content-center.col
                .col-md-8   
                  form(action="/testimonials" method="POST")  
                    .form-group 
                        label(for="name") Name
                        input#name(type="text", placeholder="Name", name="name", class="form-control", value=name)
                    .form-group 
                        label(for="email") Email
                        input#email(type="text", placeholder="Email", name="email", class="form-control", value=email)
                    .form-group 
                        label(for="message") Message
                        textarea#message(class="form-control", name="message", placeholder="Message", rows=3)= message 
                    input.btn.btn-success.btn-block(type="submit")